# WordPress Analyzer & Summary API Configuration

# ============================================
# API SETTINGS
# ============================================
APP_NAME="WordPress Analyzer & Summary API"
DEBUG=false

# ============================================
# WORDPRESS ANALYZER - HTTP CLIENT SETTINGS
# ============================================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
USER_AGENT="Mozilla/5.0 (compatible; WordPress-Analyzer/1.0)"

# ============================================
# WORDPRESS DETECTION SETTINGS
# ============================================
ENABLE_PLUGIN_DETECTION=true
ENABLE_THEME_DETECTION=true
ENABLE_VERSION_DETECTION=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=10

# ============================================
# GEMINI SETTINGS (Used for both attachments and video summarization)
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ============================================
# FILE PROCESSING
# ============================================
MAX_FILE_SIZE_MB=50
